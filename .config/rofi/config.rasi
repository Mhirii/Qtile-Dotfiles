

* {
  /* Default background color */
  background-color: #3B475800;
  text-color:       #8BA7C5;
  font: "JetBrainsMono Bold 10";
}


window {
  padding: 1em;
  border-color: #3B475800;
  border:       0px;
  border-radius: 8px;
  background-color: #3B475830;
}

mainbox {
  spacing: 0px;
  children: [message,inputbar,listview];
}

message {
    enabled:                     true;
    margin:                      0px 100px;
    padding:                     15px;
    border:                      0px solid;
    border-radius:               8px;
    border-color:                inherit;
    background-color:            inherit;
    text-color:                  inherit;
    size:                        400em;
}
textbox {
    background-color:            inherit;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
    placeholder-color:           inherit;
    blink:                       true;
    markup:                      true;
    size:                        400em;
    font: "JetBrainsMono Bold 15";

}
error-message {
    padding:                     12px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                inherit;
    background-color:            inherit;
    text-color:                  inherit;
}

element {
  background: transparent;
  children: [ element-icon, element-text ];
}
element,element-text,element-icon, button {
    cursor: pointer;
}

inputbar {
  margin: 0px 10px;
  spacing: 0.4em;
  border-color: #7799B700;
  border:        2px;
  background-color: #FFFFFF05;
  children: [entry,overlay,case-indicator];
  border-radius: 8px;
}


listview, message {
  padding: 0.5em;
  border-color: #3B475800;
  border:        8px;
  border-radius: 8px;
  background-color: #3B475800;

  columns: 1;
  lines:   8;
}
listview {
  border:       0px 5px 5px 5px;
  border-radius: 8px;
  spacing: 10px;
  background-color: #3B475800;
  border-color:     #3B465700;
  scrollbar: true;
}


element {
    border:  5px;
    border-radius: 8px;
    padding: 5px;
    border-color: #3B465700;
}
element-text {
    background-color: #3B475800;
    text-color:       #FFFFFF;
    font: "JetBrains Mono Medium";
}

element normal.normal {
    background-color: #3B475800;
    text-color:       #8BA7C5;
}
element.normal.urgent {
    background-color: #3B475800;
    text-color:       #8BA7C5;
}
element.normal.active {
    background-color: #3B475800;
    text-color:       #8BA7C5;
}
element.selected.normal {
    background-color: #8BA7C5;
    border-color: #8BA7C5;
    text-color:       #8BA7C5;
}
element.selected.urgent {
    background-color: #8BA7C5;
    border-color: #8BA7C5;
    text-color:       #8BA7C5;
}
element.selected.active {
    background-color: #8BA7C5;
    border-color: #8BA7C5;
    text-color:       #8BA7C5;
}
element.alternate.normal {
    background-color: #3B475800;
    text-color:       #8BA7C5;
}
element.alternate.urgent {
    background-color: #3B475800;
    text-color:       #8BA7C5;
}
element.alternate.active {
    background-color: #3B475800;
    text-color:       #8BA7C5;
}


element-text.selected.normal {
    background-color: #8BA7C5;
    border-color: #8BA7C5;
    text-color:       #E2E9EC;
    font: "JetBrains Mono Medium";
}
element-text.selected.urgent {
    background-color: #8BA7C5;
    border-color: #8BA7C5;
    text-color:       #E2E9EC
;
    font: "JetBrains Mono Medium";
}
element-text.selected.active {
    background-color: #8BA7C5;
    border-color: #8BA7C5;
    text-color:       #E2E9EC;
    font: "JetBrains Mono Medium";
}

scrollbar {
    width:        4px ;
    border:       0;
    handle-color: #8BA7C5;
    handle-width: 8px ;
    padding:      0;
}

mode-switcher {
    border:  0px;
    spacing: 0px;
    expand: true;
}
button {
    text-color: #8BA7C5;
    border:       0px 0px 5px ;
    border-color: #3B475800;
    border-radius:    8px;
    background-color: #3B475800;
    horizontal-align: 0.5;
}
button selected.normal {
    text-color: #8BA7C5;
    margin: 0px;
    padding: 0px;
    border:     5px 5px 5px 5px ;
    border-color: #3B475800;
    border-radius:    8px;
    background-color: #353446;
}

entry {
    placeholder: "Search here";
    placeholder-color: #8BA7C5;
    border-color: #3B465700;
    background-color: #3B465700;
    border:        12px;
    border-radius: 8px;
    text-color: #8BA7C5;
  }
